.chat-side
  .side-header
    .side-header__box
      %h3.side-header__box__user-name 
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
          = link_to new_group_path, class: "side-header__box__menu__new-group__new" do
            = fa_icon "edit", class: "side-header__box__menu__new-group__new-icon"
        %li.side-header__box__menu__edit-user
          = link_to edit_user_path(current_user), class: "side-header__box__menu__edit-user__edit" do
            = fa_icon "cog", class: "side-header__box__menu__edit-user__edit-icon"

  -# サイドバーのグループ表示部分
  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .group
          .group__name
            = group.name
          .group__message
            = group.show_last_message